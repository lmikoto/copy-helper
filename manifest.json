{
	"manifest_version": 2,
	"name": "copy助手",
	"version": "1.0.0",
	"description": "复制segmentfault、简书等网站时去掉小尾巴",
	"author": "lmikoto",
	"icons":
	{
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": 
	{
		"default_icon": "icon.png"
	},
	"content_scripts": 
	[
		{
			"matches": ["https://segmentfault.com/*","https://www.jianshu.com/*"],
			"js": ["content-script.js"]
		}
	],
	"web_accessible_resources": 
	[
		"inject.js"
	]
}